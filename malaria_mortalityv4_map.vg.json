{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Malaria",
    "width": 570,
    "height": 430,
    "projection": {
      "type": "equirectangular"
    },
  
    "params" : [ 
      { 
          "name" : "attribute", 
          "value": "Mortality",
          "bind" : 
              { "input" : "select", 
              "options" :
                  [ 
                  "Mortality", 
                  "Incidence"
                  ],
              "name": "type "
          
              }
      },
      { 
        "name" : "Cases" , 
        "value" : 0 ,
        "bind" : 
            { 
                "input" : "range" ,
                "min": 0,         
                "max": 100000,         
                "step": 10,         
                "name": "minimum quantity "       
            }     
      }
  ],
  


  
  "layer":[
    {
  "mark": {
    "type": "geoshape",
    "stroke": "black"
          },

          "data": {
            "url": "malaria_deaths.csv" 
          },
          
    "transform": [
      {"filter": "datum.Deaths >= Cases" },
      {"filter": {"field": "type", "equal":{"expr": "attribute"} }},

      {
      "lookup": "Country",
        "from": {
          "data": {
            "url": "ne_110m_admin_0_countries.topojson",
            "format": {
                  "type": "topojson",
                  "feature": "ne_110m_admin_0_countries"
                      }
                  },
                "key": "properties.NAME"
                },
        "as": "map"
      }
    ],
  
            "encoding": {
                  "shape": {
                "field": "map",
                "type": "geojson"
                           },
                           "color": {
                            "field": "Deaths",
                            "type": "quantitative",
                            "title": "Quantity",
                            "legend": {
                              "orient": "top-left"
                                     },
                            "scale": {         
                              "type": "ordinal",         
                              "domain": [100, 1000, 7000000],         
                              "range": ["blue","white", "orange"]
                                     }
                                    },
                        "tooltip": [
                          {"field": "Country", "type": "nominal", "title": "Country"},
                          {"field": "Deaths", "type": "quantitative", "title": "No."}
                                   ]
                        }
                      },
                      {
                        "data": {
                          "url": "malaria_deaths.csv" 
                        },
                        "transform": [
                            {"filter": {"field": "type", "equal":"Mortality" }},
                            {"filter": {"field": "Country", "equal":"Australia" }},
                            {"calculate": "'The Australian mortality rate from Malaria is: ' + datum['Deaths']",
                            "as": "annotation"
                            }
                          ],
                          "mark": {"type": "text", "dx": 150, "dy": 150},
                          "encoding": {
                                    "text": {"field": "annotation"}
                                      }
                                    },
                                      {
                                        "data": {
                                          "url": "malaria_deaths.csv" 
                                        },
                                        "transform": [
                                            {"filter": {"field": "type", "equal":"Incidence" }},
                                            {"filter": {"field": "Country", "equal":"Australia" }},
                                            {"calculate": "'The Australian incidence rate from Malaria is: ' + datum['Deaths']",
                                            "as": "annotation"
                                            }
                                          ],
                                          "mark": {"type": "text", "dx": 150, "dy": 175},
                                          "encoding": {
                                                    "text": {"field": "annotation"}
                                                      }
                            
                        
                      }
                      ]
  
  }